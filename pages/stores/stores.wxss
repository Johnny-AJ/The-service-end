.bgc {
  width: 750rpx;
  height: 1334rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  /* background-color: skyblue; */
}

.tabs {
  width: 750rpx;
  height: 90rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.tabNax {
  color: #6fa6fc;
}

.text {
  border-bottom: 4rpx solid #5194fb;
  padding-bottom: 10rpx;
}

/* tab */

.nab {
  width: 750rpx;
  height: 90rpx;
  background: rgba(255, 255, 255, 1);
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.b1 {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  margin: 0 30rpx;
}

.nax {
  width: 750rpx;
  height: 90rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 3rpx solid #f5f5f5;
}
.tabs-cont2{
  width: 100%;
  height: 100%;
}
.tabs-cont2 .cont{
  width: 100%;
  margin-top: 20rpx;
  height:300rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background:rgba(255,255,255,1);
  padding: 34rpx 30rpx;

}
.tabs-cont2 .cont .imgs{
  margin-top: 4rpx;
  width: 220rpx;
  height: 220rpx;
}
.tabs-cont2 .cont .imgs image{
  width: 100%;
  height: 100%;
}
.tabs-cont2 .cont .cz{
  width: 392rpx;
   font-size:28rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(34,34,34,1);

}
.tabs-cont2 .cont .cz .t1{
display: flex;
width: 100%;
overflow: hidden;

}
.tabs-cont2 .cont .cz .t2{
display: flex;
width: 100%;

}
.tabs-cont2 .cont .cz .t2 {
display: flex;
width: 100%;

}
.tabs-cont2 .cont .cz .lft{
  width: 150rpx;
}
.tabs-cont2 .cont .cz .rht{
width: 250rpx;
word-wrap:break-word;
display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;


}
.bgc .tabs-cont2 .cont .cz  .hot{
  color: #F02B50
}
.bgc .tabs-cont2 .cont .cz  .blur{
  color: #6794FA
}
.tabs-cont2 .cont .cr{
  width: 21rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;


}
.tabs-cont2 .cont .cr image{
  width: 100%;
  height: 36rpx;
}
.add{
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  right: 30rpx;
  bottom: 100rpx;
}
.add image{
  width: 100%;
  height: 100%;
}